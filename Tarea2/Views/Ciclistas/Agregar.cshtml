@model Tarea2.Models.Ciclista

@{
    ViewBag.Title = "Agregar Ciclista";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>@ViewBag.Title</h2>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @placeholder = "ID Corredor" })
                    @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Nombre" })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", @placeholder = "Apellido" })
                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>
